general {
        colors = true
        interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "memory"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "wifi"
        format_down = "wifi"
}

ethernet _first_ {
        format_up = "eth"
        format_down = "eth"
}

disk "/" {
        format = "mem: %avail"
}

memory {
        format = "ram: %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

battery all {
        format = "bat: %percentage"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}
